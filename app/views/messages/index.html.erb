<p style="color: green"><%= notice %></p>
<h1>Messages</h1>

<table class="table table-striped">
  <div class="row">
    <div class="col-sm-8">
      <thead>
        <th>Name</th>
        <th>Content</th>  
      </thead>
    </div>
    <div class="col-sm-4">
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.name %></td>
          <td><%= message.content %></td>
          <td><%= link_to "Show", message, class: "btn btn-info"%></td> 
          <td><%= link_to "Edit", edit_message_path(message.id), class: "btn btn-success"%></td>
          <td><%= button_to "Destroy", message_path(message.id), data: { confirm: "Are you Sure..?? "}, method: :delete, class: "btn btn-danger"%>
          <td><td> 
        </tr>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "New message", new_message_path %>
